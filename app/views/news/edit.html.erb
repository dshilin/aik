<div class='content'>
<h1>Редактировать новость</h1>

<% form_for :new, @new, :url=>new_instance_path, :html => { :multipart => true, :method => :put }  do |f| %>
  <%= f.error_messages %>
  <p>Путь к фото:<br/>
    <%= f.file_field :photo %>
  </p>
  <p>Заголовок новости:<br/>
    <%= f.text_field(:title) %>
  </p>
  <p>Описание новости:<br/>
    <%= f.text_area(:description, :size => "119x10") %>
  </p>
  <p>
    <%= f.submit 'Изменить' %>
  </p>
<% end %>

<%= link_to 'Назад', news_path %>
</div>