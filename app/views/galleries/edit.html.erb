<div class='content'>
<h1>Редактировать альбом</h1>

<% form_for @gallery, :url => { :action => "update", :id=>@gallery }  do |f| %>
  <%= f.error_messages %>

  <p>Название:<br/>
    <%= f.text_field(:title) %>
  </p>
  <p>Фотографии:<br/>
    <%= f.text_area(:description, :size => "119x40") %>
  </p>
  <p>
    <%= f.submit 'Изменить' %>
  </p>
<% end %>

<%= link_to 'Назад', galleries_path %>
</div>