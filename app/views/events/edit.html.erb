<div class='content'>
<h1>Редактировать событие</h1>

<% form_for :event, @event, :url=>event_path, :html => { :multipart => true, :method => :put }  do |f| %>
  <%= f.error_messages %>
  <p>Путь к фото:<br/>
    <%= f.file_field :photo %>
  </p>
  <p>Заголовок событие:<br/>
    <%= f.text_field(:title) %>
  </p>
  <p>Описание события:<br/>
    <%= f.text_area(:description, :size => "119x10") %>
  </p>
  <p>Укажите время проведения события<br/>
    <%= f.text_field(:actual_time) %>
  </p>
  <p>
    <%= f.submit 'Изменить' %>
  </p>
<% end %>

<%= link_to 'Назад', events_path %>
</div>