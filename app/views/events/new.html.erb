<div class='content'>
<h1>Добавить событие</h1>
<% form_for :event, :url => events_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>Путь к фото:</p>
  <p><%= f.file_field :photo %></p>
  <p>Название:</p>
  <p>
  	<%= f.text_field(:title) %>
  </p>
  <p>Описание:<br/>
  	<%= f.text_area(:description, :size => "119x10") %>
  </p>

  <p>Укажите время проведения события<br/>
    <%= f.text_field(:actual_time) %>
  </p>
  <p>
    <%= f.submit 'Добавить' %>
  </p>
<% end %>

<%= link_to 'Назад', events_path %>
</div>